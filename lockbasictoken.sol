    function lock(
        ERC20 _erc20,
        uint256 _amount,
        uint256 _duration,
        string memory _note
    ) public {
        require(_amount > 0, "Invalid Amount");
        require(_duration > 0, "Invalid Duration");
        require(_erc20.balanceOf(msg.sender) >= _amount, "Insufficient balance");
        uint256 _unlockTime = block.timestamp.add(_duration.mul(1 days));
        Locked memory _locked = Locked(
            _erc20,
            _amount,
            _duration,
            block.timestamp,
            _unlockTime,
            _note
        );

        if(isTokenLocked[address(_erc20)] == 0){
            if(erc20.length > 0){
                if(erc20[0] != address(_erc20)){
                    isTokenLocked[address(_erc20)] = erc20.length;
                    erc20.push(address(_erc20));
                }
