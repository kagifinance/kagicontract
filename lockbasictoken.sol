        ERC20 _erc20 = locker[msg.sender][index].erc20;
        uint256 length = locker[msg.sender].length;
        locker[msg.sender][index] = locker[msg.sender][length - 1];
        locker[msg.sender].pop();

        uint256 bal = _erc20.balanceOf(address(this));

        if(bal == _amount){
            uint256 _index = isTokenLocked[address(_erc20)];
