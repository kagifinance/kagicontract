     */
    mapping(address => uint256) public isTokenLocked;
    address[] public erc20;

    event Lock(ERC20 _erc20, address _address, uint256 _amount, uint256 _duration, uint256 timestamp);
    event Unlock(ERC20 _erc20, address _address, uint256 _amount, uint256 timestamp);

